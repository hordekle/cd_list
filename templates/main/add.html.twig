{% extends 'base.html.twig' %}

{% block title %}Add Cd to List{% endblock %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5">Add Album</h3>
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.interpret) }}
                {{ form_widget(form.interpret, {'atrr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.album) }}
                {{ form_widget(form.album, {'atrr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.genre) }}
                {{ form_widget(form.genre, {'atrr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.rls) }}
                {{ form_widget(form.rls, {'atrr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price, {'atrr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.rating) }} (0-100%)
                {{ form_widget(form.rating, {'atrr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'atrr': {'class': 'form-control'}}) }}
            </div>
            <br />
            <div class="button">
                <button class="btn btn-info btn-block">Submit</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
