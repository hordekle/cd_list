{% extends 'base.html.twig' %}

{% block title %}{{ data.album }}{% endblock %}

{% block body %}
<div class="container">
    <h2 class="mt-4">{{ data.album }}</h2>
    <img src="{{ asset('uploads/images/') ~ data.image }}" width="400" height="400">
    <table class="table">
        <tbody>
        <tr>
            <td>Album:</td>
            <td>{{ data.album }}</td>
        </tr>
        <tr>
            <td>Interpret:</td>
            <td>{{ data.interpret }}</td>
        </tr>
        <tr>
            <td>Release date:</td>
            <td>{{ data.rls|date('Y') }}</td>
        </tr>
        <tr>
            <td>Genre:</td>
            <td>{{ data.genre }}</td>
        </tr>
        <tr>
            <td>Rating:</td>
            <td>{{ data.rating }} %</td>
        </tr>
        <tr>
            <td>Price:</td>
            <td>{{ data.price }} ,- CZK</td>
        </tr>
        </tbody>
    </table><br>
    <a class="btn btn-danger" href="{{ path('delete', {'id': data.id}) }}">Delete</a>
</div>


{% endblock %}
